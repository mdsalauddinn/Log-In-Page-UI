<?xml version="1.0" encoding="utf-8"?>
<layer-list
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--    shadow layer-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#66000000"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

    <!-- Main card layer -->
    <item
        android:bottom="4dp"
        android:right="4dp"
        android:top="4dp"
        android:start="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#31DB1F"/>
            <corners android:radius="16dp"/>
        </shape>
    </item>

</layer-list>
